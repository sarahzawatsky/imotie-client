{{#each moties as |motie|}}
  {{log moties}}
  <section data-id="{{motie.id}}">
    <p>emotion: {{motie.emotion}}</p>
    <p>intensity: {{motie.intensity}}</p>
    <p>cause: {{motie.cause}}</p>
    <p>appearance: {{motie.appearance}}</p>
    <p>solution: {{motie.solution}}</p>

    <button data-id="{{motie.id}}" class="btn btn-danger delete-button">delete motie</button>


<!-- SAVE CHANGES BUTTON NEEDS TO ACTUALLY BE THE SUBMIT BUTTON -->

  <button data-id="{{motie.id}}" type="button" class="btn btn-warning" data-toggle="modal" data-target="#exampleModalCenter">
    edit motie
  </button>

{{/each}}
